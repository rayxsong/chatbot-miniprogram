/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.message-area {
  flex-grow: 1;
  overflow-y: auto;
  padding: 10px;
  padding-bottom: 0; 
  background-color: #f0f0f0;
  margin-bottom: -1px; 
}

.message {
  min-width: 0; 
  padding: 8px;
  margin-bottom: 10px; 
  border-radius: 4px;
  word-wrap: break-word; 
  max-width: 80%;
}

.user-message {
  background-color: #b3daff;
  flex: auto;
  margin-left: auto;
  margin-right: 10px;
  align-self: flex-end;
  text-align: right;
  width: fit-content;
}

.bot-message {
  background-color: #e5e5ea;
  flex: auto;
  margin-left: 10px;
  align-self: flex-start; 
  text-align: left;
  width: fit-content;
}

.input-area {
  display: flex;
  justify-content: space-between; 
  align-items: center; 
  padding: 10px;
  background-color: #FFF;
  border-top: 1px solid #ddd;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.input-field {
  flex-grow: 1;
  padding: 8px;
  margin-right: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

button {
  display: flex;
  justify-content: center; 
  align-items: center; 
  width: 40px; 
  height: 40px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
}
